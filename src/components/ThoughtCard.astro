---
import FormattedDate from "./FormattedDate.astro";

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  slug: string;
}

const { title, description, pubDate, slug } = Astro.props;
---

<article class="group">
  <a href={`/thoughts/${slug}`} class="block no-underline hover:no-underline">
    <h3
      class="text-base font-medium text-[var(--color-text)] group-hover:text-[var(--color-accent)] transition-colors"
    >
      {title}
    </h3>
    <p class="mt-1 text-sm text-[var(--color-text-muted)] line-clamp-2">
      {description}
    </p>
    <p class="mt-1 text-xs text-[var(--color-text-muted)]">
      <FormattedDate date={pubDate} />
    </p>
  </a>
</article>
