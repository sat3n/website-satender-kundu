---
interface Props {
  title: string;
  source: string;
  url: string;
  category?: string;
  note?: string;
}

const { title, source, url, category, note } = Astro.props;
---

<div class="py-3 border-b border-[var(--color-border)] last:border-b-0">
  <div class="flex items-start justify-between gap-4">
    <div>
      <p class="font-medium text-[var(--color-text)]">
        <a
          href={url}
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-[var(--color-accent)]"
        >
          {title}
          <span class="text-xs text-[var(--color-text-muted)] font-normal ml-1"
            >&#8599;</span
          >
        </a>
      </p>
      <p class="text-sm text-[var(--color-text-muted)]">{source}</p>
      {note && <p class="mt-1 text-sm text-[var(--color-text-muted)]">{note}</p>}
    </div>
    {
      category && (
        <span class="text-xs px-2 py-0.5 rounded-full bg-[var(--color-surface)] text-[var(--color-text-muted)] shrink-0">
          {category}
        </span>
      )
    }
  </div>
</div>
